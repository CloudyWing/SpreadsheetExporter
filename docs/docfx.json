{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          ".nojekyll"
        ]
      }
    ],
    "output": "../_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "SpreadsheetExporter Docs",
      "_appTitle": "SpreadsheetExporter Docs",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/logo.png",
      "_enableSearch": true,
      "pdf": true,
      "_gitContribute": {
        "repo": "https://github.com/CloudyWing/SpreadsheetExporter",
        "branch": "main"
      }
    }
  }
}